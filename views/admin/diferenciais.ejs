<% include ./partials/header %>
<div class="main">
  <h1 class='text-center mb-5'>Diferenciais</h1>
  <div class="row justify-content-center">
  <button href='/admin/diferencial/new' class='cmbtn btn btn-gerenciamento m-1'><i class="fas fa-plus pr-2"></i>Adicionar</button>
    <a href="/admin/gerenciamento" class='cmbtn btn btn-gerenciamento m-1'>Voltar</a>
  </div>
  <% diferenciais.forEach(function(diferencial){ %>
    <div class="container-elemento">
      <div class="row p-2 m-2 justify-content-center">
        <div class="p-0 m-0 col-md-6 text-center">
          <img class='rounded img-fluid img-evento p-0' id='showImage' src="<%= diferencial.URL %>"><br>
        </div>
        <form data="/admin/edit/diferencial/<%= diferencial._id %>" id="update" class='text-center col-12 col-lg-6'>
            <input class="form-control m-1" type="text" name="titulo" value="<%= diferencial.titulo %>" required/>
            <textarea class="form-control m-1" id="exampleFormControlTextarea1" rows="10" name="descricao"><%= diferencial.descricao %></textarea>
            <button class='btn p-0'><i class="far fa-save fa-2x"></i></button>
        </form>
        
        <form data="/admin/diferencial/upload/<%= diferencial._id %>" id="sendImg" class='text-left col-12'>
          <input class="form-control-file m-2" id='input-file' type="file" name="image" enctype="multipart/form-data">
          <button class='btn p-0' id='sendImgBtn'><i class="far fa-save fa-2x"></i></button>
        </form>
        
        <form class='col-12 text-right'>
            <button class='btn btn-delete deletar p-0' data="/admin/diferencial/<%= diferencial._id %>/delete"><i class="fas fa-trash-alt fa-2x"></i></button>
        </form>
      </div>
    </div>
  <% }) %>
</div>
<% include ./partials/footer %>