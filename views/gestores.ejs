<% } %>
<% if(equipe2.gestores != undefined){ %>
<% var gestorCounter = 0; %>
<div class="row justify-content-center mb-3 bg-font-master bg-gestores">
<h2 class='text-center col-12 m-2 fonte-4 master'><%=equipe2.titulo%></h2>
<% equipe2.gestores.forEach((gestor)=>{ %>
<% if(gestorCounter < 4){ %>
    <div class="col-6 col-md-3 mt-4 text-center">
