<% include ./partials/header.ejs %>
<div class="main main-ensino main-auto">
    <% var counterEnsino = 0; %>
    <% if(ensinos.length>0){ %>
    <% ensinos.forEach((ensino)=>{ %>
     <% counterEnsino++ %>
      <% if(counterEnsino%2==0){ %>
        <div class="row bg-ensino-home" id='<%=encodeURI(ensino.titulo)%>' style='background-image: url(<%=ensino.URL%>)'>
            <div class="container row-container-ensino-l my-auto">
                <div class="row row-ensino-em">
                    <div class="col-md">
                        <div class="content-wrapper text-left back-2 py-3 px-5">
                            <div class="bg-font-fix mb-1">
                                <h1 class='fonte-5 master m-auto pb-1'><%=ensino.titulo%></h1>
                                <div class="underline-text"></div>
                            </div>
                            <p class="text-dark"><%=ensino.descricao%><br></p>
                        </div>
                    </div>
                    <div class="col-3 d-none d-md-block"></div>
                </div>
            </div>
        </div>
        <% }else{ %>
        <div class="row bg-ensino-home" id='<%=encodeURI(ensino.titulo)%>'  style='background-image: url(<%=ensino.URL%>)'>
            <div class="container row-container-ensino-r my-auto">
                <div class="row row-ensino-em">
                    <div class="col-md order-md-2">
                        <div class="content-wrapper text-left back-2 py-3 px-5">
                            <div class="bg-font-fix mb-1">
                                <h1 class='fonte-5 master m-auto pb-1'><%=ensino.titulo%></h1>
                                <div class="underline-text"></div>
                            </div>
                            <p class="text-dark"><%=ensino.descricao%><br></p>
                        </div>
                    </div>
                    <div class="col-3 d-none d-md-block order-md-1"></div>
                </div>
        </div>
        </div>
        <% } %>
    <% }) %>
    <% } %>
