<% include ./partials/header.ejs %>
<div class="main">
        <div class="row mt-5 w-100 mx-0" style="height: 85vh;">
            <div class="col-lg-8 order-lg-2">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a data-target="#perfil" data-toggle="tab" class="nav-link active">Perfil</a>
                    </li>
                </ul>
                <div class="tab-content py-4">
                    <div class="tab-pane active" id="perfil">
                        <div class="row">
                            <div class="col-md-6">
                                <% if(perfil.nome !== null && perfil.nome !== undefined && perfil.nome !== ""){ %>
                                <h6>Nome</h6>
                                <p class='pl-2'>
                                    <%= perfil.nome %>
                                </p>
                                <% } %>
                                <% if(perfil.email !== null && perfil.email !== undefined && perfil.email !== ""){ %>
                                <h6>Email</h6>
                                <p class='pl-2'><%= perfil.email %></p>
                                <% } %>
                                <% if(perfil.escola !== null && perfil.escola !== undefined && perfil.escola !== ""){ %>
                                <h6>Escola</h6>
                                <p class="pl-2"><%= perfil.escola %></p>
                                <% } %>
                            </div>
                            <div class="col-md-6 border-left border-secondary">
                                <% if(currentUser && currentUser.tipoConta === 1){ %>
                                    <form data="/blog/trofeu/<%= perfil._id %>" class='text-center pb-3' id='trofeu'>
                                        <select name="trofeu_id">
                                            <option value=""></option>
                                        <% trofeus.forEach((trofeu)=>{ %>
                                            <option value="<%=trofeu._id%>"><%= trofeu.nome %></option>
                                        <% }); %>
                                        </select>
                                        <button class='btn btn-trofeu'><i class="fas fa-trophy pr-1"></i>Dar trofeu!</button>
                                    </form>
                                    <% } %>
                                <% if(perfil.trofeus.length >0){ %>
                                <h4 class='text-center'>Trofeus <i class="fas fa-trophy pl-2"></i></h4>
                                <% perfil.trofeus.forEach((trofeu)=>{ %>
                                    <div class="m-1 d-inline-block text-center">
                                        <img src="<%= trofeu.imagem %>" class='img-float' style="width: 3.5rem; height: 3.5rem;">
                                        <h6 class='text-center'><%= trofeu.nome %></h6>
                                        <% if(currentUser && currentUser.tipoConta === 1){ %>
                                        <form data="/blog/post/delete/trofeu/<%=perfil._id%>/<%=trofeu._id%>" class='deletarTrofeu'>
                                            <button class='btn btn-delete p-0'><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                        <% } %>
                                    </div>
                                <% }); %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 order-lg-1 text-center">
                <img src="<%=foto%>" class="mx-auto img-fluid img-circle border border-secondary rounded d-block" alt="avatar" style="width: 15rem;height: 15rem;">
            </div>
        </div>
</div>
<% include ./partials/footer.ejs %>