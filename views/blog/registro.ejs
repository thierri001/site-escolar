<% include ./partials/header.ejs %>
<div class="main"style='height: auto;'>
    <div class="row w-100 justify-content-center text-center col-12">
        <form data="/blog/usuario/new" id='new' class='mt-3 ml-5 p-5 text-dark form-bg text-center col-md-10 col-lg-4'>
            <h3 class='text-center'><img src="/uploads/icone-escola.png" alt="" class='back-escola-master img-fluid'></h3>
            <div class="form-group">
                <label>Usuario</label>
                <input class="form-control m-1" type="text" name="username" placeholder='Usuario'required/>
            </div>
            <div class="form-group">
                <label>Senha</label>
                <input class="form-control m-1" type="password" name="password" required>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control m-1" type="email" name='email' placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="regras">Aceito as <a href='#' data-toggle="modal" data-target="#ModalLongo">regras</a> para o uso do blog</label>
                <input type="checkbox" name="regras">
            </div>
                <button class='btn btn-success p-2'>Cadastrar!</button>
        </form>
    </div>
        <div class="modal fade" id="ModalLongo" tabindex="-1" role="dialog" aria-labelledby="TituloModalLongoExemplo" aria-hidden="true">
            <div class="modal-dialog mx-auto mt-5" role="document">
                <div class="modal-content" style="max-width: 600px;">
                    <div class="modal-header">
                        <h5 class="modal-title" id="TituloModalLongoExemplo">Regras do blog</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                     <%- regras %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>