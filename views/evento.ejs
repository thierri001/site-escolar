<% include ./partials/header.ejs %>
<div class="main main-auto">
  <div class="container">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/pt_BR/sdk.js#xfbml=1&version=v3.3"></script>
<button type="button" style='display:none' id='toggle-modal-evento'class="btn btn-info btn-lg" data-toggle="modal" data-target="#ModalCarousel">
</button>
    <div class='row justify-content-center p-1 p-sm-2 bg-font-master'>
    <div class="col-12 p-0 m-0 col-md-10 text-center">
      <img class='rounded img-fluid img-evento p-0' src="<%= evento.capa %>"><br>
    </div>
    <h1 class='text-center w-100'><%= evento.titulo %></h1><br>
    <p><%= evento.descricao %></p>
    </div>
    <% if(evento.fotos.length >0){ %>
    <div class='row bg-evento-fotos bg-font-master mb-5'>
    <% var j = 0; %>
    <% evento.fotos.forEach((foto)=>{ %>
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 p-2">
        <a href='#' class='botao-carousel carousel-button' data-slide-to="<%=j%>"><img id='<%=foto.id%>' src="<%=foto.URL%>" alt="<%=foto.nome%>" class='img-fluid rounded img-evento'></a>
        <h5 class='d-block d-sm-none w-100 text-center'><%=foto.nome%></h5><br>
        <p class='d-block d-sm-none'><%=foto.descricao%></p>
        </div>
    <% j++; %>
    <% }) %>
    </div>
    <% } %>
    
<div class="modal p-2 px-xl-5 pt-xl-0" id="ModalCarousel" tabindex="-1" role="dialog" aria-labelledby="ModalCarouselLabel">
  <div class="modal-dialog" >
    <div class="modal-content" style='background: transparent; border:none;'>
        <button type="button" class="close text-right" data-dismiss="modal" aria-label="Close">
          <span class='modal-close-btn' aria-hidden="true">&times;</span>
        </button>
<div id="carousel-modal-demo" class="carousel slide">
  <ol class="carousel-indicators">
    <% var e = 0; %>
    <% evento.fotos.forEach((i)=>{ %>
    <% if(e===0){ %>
    <li data-target="#carousel-modal-demo" data-slide-to="<%=e%>" class="active"></li>
    <% } else { %>
    <li data-target="#carousel-modal-demo" data-slide-to="<%=e%>"></li>
    <% } %>
    <% e++ %>
    <% }) %>
  </ol>
  
  <!-- Sliding images statring here --> 
   <div class="carousel-inner"> 
    <% var i = 0; %>
        <% evento.fotos.forEach((foto)=>{ %>
        <% if(i===0){ %>
        <div class="carousel-item active"> 
          <img class='d-block img-fluid' src="<%=foto.URL%>" alt="<%=foto.nome%>"> 
          <div class="carousel-caption d-none d-md-block">
           <h5><%=foto.nome%></h5>
           <p><%=foto.descricao%></p>
          </div>
        </div>
        <% i++ %>
        <% }else{ %>
        <div class="carousel-item"> 
          <img class='d-block img-fluid' src="<%=foto.URL%>" alt="<%=foto.nome%>"> 
          <div class="carousel-caption d-none d-md-block">
           <h5><%=foto.nome%></h5>
           <p><%=foto.descricao%></p>
          </div>
        </div>
         <% i++ %>
         <% }%>
        <% }) %>
  </div> 
  <a class="left carousel-control-prev" href="#carousel-modal-demo" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control-next" href="#carousel-modal-demo" data-slide="next">
    <span class="icon-next"></span>
  </a>
  
</div>
</div>
</div>
</div>
<div class="bg-font-master">
  <div class="fb-comments" data-href="<%=windowUrl%>" data-width="1100" data-numposts="20"></div>
</div>
</div>
<% include ./partials/footer.ejs %>